# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=generate_random_secret
TELEGRAM_USE_WEBHOOK=false

# Backend API
BACKEND_API_URL=http://localhost:8000
BACKEND_API_KEY=your_internal_api_key

# Database (Shared with Backend)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/polymarket_copy

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=same_as_backend_jwt_secret
ENCRYPTION_KEY=same_as_backend_encryption_key

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Environment
ENVIRONMENT=development
DEBUG=true

# Rate Limiting
MAX_MESSAGES_PER_USER_PER_MINUTE=10
