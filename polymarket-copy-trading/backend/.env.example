# ========================================
# Application Settings
# ========================================
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:8500
API_URL=http://localhost:8000

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/polymarket_copy_trading

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# Email Configuration
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@polymarket-copy.com

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# Celery Configuration
# ========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ========================================
# Polymarket API
# ========================================
POLYMARKET_API_BASE_URL=https://clob.polymarket.com
POLYGON_RPC_URL=https://polygon-rpc.com

# ========================================
# Encryption
# ========================================
MASTER_ENCRYPTION_KEY=your-32-character-encryption-key

# ========================================
# Stripe Payments (Optional)
# ========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ========================================
# The Graph Protocol Configuration
# ========================================
# Graph API URL for Polymarket subgraph
GRAPH_API_URL=https://api.thegraph.com/subgraphs/name/polymarket/matic-markets-5

# Optional: The Graph API key for higher rate limits
# Get your key from: https://thegraph.com/studio/
GRAPH_API_KEY=

# ========================================
# Trader Data Fetching Configuration
# ========================================
# How often to fetch trader data (in seconds)
TRADER_FETCH_INTERVAL=300

# Cache TTL settings (in seconds)
LEADERBOARD_CACHE_TTL=60
TRADER_CACHE_TTL=300

# Minimum requirements for traders to appear on leaderboard
MIN_TRADER_TRADES=10
MIN_TRADER_VOLUME=100.00
