# ==============================================
# POLYMARKET COPY TRADING - ENVIRONMENT TEMPLATE
# ==============================================
# Copy this file to create environment-specific configs:
# - .env.development (local development)
# - .env.staging (staging environment)
# - .env.production (production - NEVER commit!)

# ==============================================
# APPLICATION
# ==============================================
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000

# ==============================================
# DATABASE
# ==============================================
# PostgreSQL connection
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/polymarket_copy
DB_HOST=localhost
DB_PORT=5432
DB_NAME=polymarket_copy
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ==============================================
# REDIS
# ==============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ==============================================
# CELERY
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_here_minimum_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Master Encryption Key (for API keys storage)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_ENCRYPTION_KEY=your_fernet_key_here

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=false

# ==============================================
# BLOCKCHAIN
# ==============================================
# Polygon RPC URL (Alchemy, Infura, or QuickNode)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_api_key_here
POLYGON_CHAIN_ID=137

# Polymarket Contract Addresses
POLYMARKET_CONTRACT_ADDRESS=0x...
POLYMARKET_CLOB_ADDRESS=0x...

# ==============================================
# POLYMARKET API
# ==============================================
POLYMARKET_API_BASE_URL=https://clob.polymarket.com
POLYMARKET_API_TIMEOUT=30

# ==============================================
# TELEGRAM BOT
# ==============================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
USE_TELEGRAM_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=https://yourdomain.com
ADMIN_TELEGRAM_IDS=123456789,987654321

# ==============================================
# EMAIL / SMTP
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@polymarket-copy.com
EMAIL_FROM_NAME=Polymarket Copy Trading

# ==============================================
# STRIPE PAYMENTS
# ==============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Subscription Price IDs
STRIPE_PRO_PRICE_ID=price_...
STRIPE_ENTERPRISE_PRICE_ID=price_...

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=INFO
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# CORS
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_TELEGRAM_BOT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKET=true
ENABLE_AUTO_TRADING=false
ENABLE_API_VERSIONING=true

# ==============================================
# BACKGROUND TASKS
# ==============================================
# How often to update trader stats (seconds)
TRADER_UPDATE_INTERVAL=300

# How often to check for new trades (seconds)
TRADE_CHECK_INTERVAL=10

# How often to calculate P&L (seconds)
PNL_CALCULATION_INTERVAL=60

# ==============================================
# TRADING LIMITS (Default Values)
# ==============================================
DEFAULT_COPY_PERCENTAGE=5.0
DEFAULT_DAILY_LIMIT=100.0
DEFAULT_WEEKLY_LIMIT=500.0
DEFAULT_SLIPPAGE_TOLERANCE=1.0

# ==============================================
# AWS (if using AWS services)
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SECRETS_MANAGER_SECRET_NAME=polymarket-copy-trading-secrets

# ==============================================
# TESTING
# ==============================================
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/polymarket_test
