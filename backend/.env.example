# Application
APP_NAME=Polymarket Copy Trading Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/polymarket_copy
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300

# Security
JWT_SECRET_KEY=generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
MASTER_ENCRYPTION_KEY=generate_with_Fernet_generate_key
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_HEADERS=*

# Blockchain - Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_RPC_WSS=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_CHAIN_ID=137
POLYGON_FALLBACK_RPC=https://polygon-rpc.com

# Polymarket Contracts
POLYMARKET_CTF_EXCHANGE=0x4bFb41d5B3570DeFD03C39a9A4D8dE6Bd8B8982E
POLYMARKET_CONDITIONAL_TOKENS=0x4D97DCd97eC945f40cF65F87097ACe5EA0476045
USDC_CONTRACT=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Polymarket API
POLYMARKET_API_URL=https://clob.polymarket.com
POLYMARKET_API_KEY=your_polymarket_api_key_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Trade Execution
MAX_SLIPPAGE_PERCENT=1.0
MAX_GAS_PRICE_GWEI=500
DEFAULT_GAS_LIMIT=300000
TRADE_CONFIRMATION_BLOCKS=2

# Risk Management
MAX_TRADE_SIZE_USD=10000
MAX_DAILY_TRADES_PER_USER=100
MAX_POSITION_SIZE_PERCENT=20
MIN_BALANCE_THRESHOLD_USD=10

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENVIRONMENT=development

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=generate_random_secret

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@polymarketcopy.com
# --------------------------------------------------
# POLYGON BLOCKCHAIN (Polymarket runs on Polygon)
# --------------------------------------------------

# Primary RPC endpoint (get from Alchemy, Infura, or QuickNode)
# Alchemy: https://dashboard.alchemy.com/ (create free account, get Polygon URL)
# Infura: https://infura.io/ (create project, select Polygon network)
# QuickNode: https://www.quicknode.com/ (fastest, paid plans)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# WebSocket endpoint for real-time block monitoring (optional but recommended)
POLYGON_RPC_WSS=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Fallback RPC endpoints (comma-separated for redundancy)
# Use multiple providers for high availability
POLYGON_RPC_FALLBACKS=https://polygon-rpc.com,https://rpc-mainnet.matic.network

# Block monitoring configuration
BLOCKCHAIN_POLLING_INTERVAL=12  # seconds (only used if WebSocket unavailable)
BLOCKCHAIN_ENABLE_WEBSOCKET=true
BLOCKCHAIN_RECOVERY_LOOKBACK=100  # blocks to look back on restart

# --------------------------------------------------
# REDIS (for caching and rate limiting)
# --------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_KMS_KEY_ID=your_kms_key_id

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_TELEGRAM_NOTIFICATIONS=true
ENABLE_TRADE_EXECUTION=true
ENABLE_LEADERBOARD=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
